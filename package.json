{
  "name": "hugo-theme-bootstrap",
  "description": "Hugo bootstrap theme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "bootstrap": "^5.0.2",
    "fibers": "^5.0.0",
    "fuse.js": "^6.4.1",
    "katex": "^0.13.13",
    "mark.js": "^8.11.1",
